<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Team Application</title>
    @Styles.Render("~/Content/bootstrap-new.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Team Application", "Index", "Home", null, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink(TeamApplication.Resources.HomeText.Home, "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink(TeamApplication.Resources.HomeText.AddUser, "AddUser", "Home", null, new { @class = "nav-link" })</li>
                </ul>
            </div>

            @if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == "en" || System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == "en-US")
            {
                <form class="d-flex">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("French", "Change", "Home", new { LanguageAbbrevation = "fr-CA" }, new { @class = "nav-link active" })</li>
                    </ul>
                </form>
            }
            else
            {
                <form class="d-flex">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("English", "Change", "Home", new { LanguageAbbrevation = "en-US" }, new { @class = "nav-link active" })</li>
                    </ul>
                </form>
            }
        </div>
    </div>
    <p></p>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
